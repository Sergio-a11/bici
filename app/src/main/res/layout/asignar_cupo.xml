<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout6"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsignarCupo" >

    <TextView
        android:id="@+id/txtCodigo"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="Id"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAsignar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="132dp"
        android:layout_marginBottom="11dp"
        android:text="Asign Slot"
        app:layout_constraintBottom_toTopOf="@+id/btnVolverAsignar"
        app:layout_constraintStart_toStartOf="parent" />

    <Spinner
        android:gravity="center"
        android:id="@+id/spnCupos"
        android:layout_width="246dp"
        android:layout_height="37dp"
        android:layout_marginTop="208dp"
        android:layout_marginEnd="56dp"
        android:background="@drawable/edt_texto_campos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@+id/txtSeccion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="164dp"
        android:text="Section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCodigo" />

    <Spinner
        android:gravity="center"
        android:background="@drawable/edt_texto_campos"
        android:id="@+id/spnSeccionAsignar"
        android:layout_width="212dp"
        android:layout_height="32dp"
        android:layout_marginTop="47dp"
        android:layout_marginEnd="76dp"
        android:entries="@array/seccion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnCupos" />

    <TextView
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="84dp"
        android:text="Cupos"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCodigo" />

    <EditText
        android:gravity="center"
        android:id="@+id/edtCodigoEnCupos"
        android:layout_width="212dp"
        android:layout_height="40dp"
        android:layout_marginTop="105dp"
        android:layout_marginEnd="87dp"
        android:background="@drawable/edt_texto_campos"
        android:ems="10"
        android:inputType="number"
        android:maxLength="50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnVolverAsignar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="160dp"
        android:layout_marginBottom="101dp"
        android:text="Exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>