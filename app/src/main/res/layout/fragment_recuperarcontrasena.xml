<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout7"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Recuperarcontrasena">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="Recover Password"
            android:textColor="#FFFFFF"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="134dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="Id"
                android:textColor="#FFFFFF" />

            <EditText
                android:gravity="center"
                android:id="@+id/txtCodigoR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_texto_campos"
                android:ems="10"
                android:inputType="number"
                android:minHeight="48dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView7"
                android:layout_width="134dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="Question"
                android:textColor="#FFFFFF" />

            <Spinner
                android:gravity="center"
                android:id="@+id/spnPreguntaR"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/edt_texto_campos"
                android:theme="@style/Theme.SdjComp.AppBarOverlay" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView11"
                android:layout_width="134dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="Answer"
                android:textColor="#FFFFFF" />

            <EditText
                android:gravity="center"
                android:id="@+id/txtRespuestaR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_texto_campos"
                android:ems="10"
                android:inputType="textPersonName"
                android:minHeight="48dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="134dp"
                android:layout_height="31dp"
                android:gravity="center"
                android:text="New \nPassword"
                android:textColor="#FFFFFF" />

            <EditText
                android:gravity="center"
                android:id="@+id/txtContrasenaR"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edt_texto_campos"
                android:ems="10"
                android:inputType="textPassword"
                android:minHeight="48dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnVolverRecuperar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/radius"
                    android:text="Exit" />

            <Button
                android:id="@+id/btnCambiarPw"
                android:layout_width="241dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="5dp"
                android:background="@drawable/radius"
                android:text="Change Password" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>