<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarUsuario" >

    <EditText
        android:id="@+id/edtRespuestaM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Fand of food"
        android:textAlignment="center"
        android:background="@drawable/edt_texto_campos"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/lblRespuesta2"
        app:layout_constraintTop_toBottomOf="@+id/spnPreguntasM"
        />

    <TextView
        android:id="@+id/lblTituloM"
        android:layout_width="380dp"
        android:layout_height="79dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="48dp"
        android:singleLine="false"
        android:text="Edit User"
        android:textColor="#FFFFFF"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblNombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="28dp"
        android:text="Name"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloM" />

    <EditText
        android:background="@drawable/edt_texto_campos"
        android:id="@+id/edtNombreM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Juanito Alcachofa"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/lblNombre2"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloM" />

    <TextView
        android:id="@+id/lblClave2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="68dp"
        android:text="Password"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNombre2" />

    <EditText
        android:id="@+id/edtClaveM"
        android:background="@drawable/edt_texto_campos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:textAlignment="center"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/lblClave2"
        app:layout_constraintTop_toBottomOf="@+id/edtNombreM" />

    <TextView
        android:id="@+id/lblPregunta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="64dp"
        android:text="Questions"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblClave2" />

    <Spinner
        android:id="@+id/spnPreguntasM"
        android:layout_width="209dp"
        android:background="@drawable/edt_texto_campos"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toEndOf="@+id/lblPregunta2"
        app:layout_constraintTop_toBottomOf="@+id/edtClaveM"
        android:theme="@style/Theme.SdjComp.AppBarOverlay"/>

    <Button
        android:id="@+id/btnModificarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="144dp"
        android:text="Edit"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FF0000"
        android:textColorHint="#FF0000"
        android:textColorLink="#ED0000"
        app:iconTint="#DA0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lyModificarUsuarioRol"
        app:rippleColor="#7E7E7E" />

    <TextView
        android:id="@+id/lblRespuesta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="44dp"
        android:text="Answer"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPregunta2" />

    <ImageButton
        android:id="@+id/btnModificarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="15dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_bxs_up_arrow_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtNombreM"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloM" />

    <ImageButton
        android:id="@+id/btnModificarClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_bxs_up_arrow_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtClaveM"
        app:layout_constraintTop_toBottomOf="@+id/btnModificarNombre" />

    <ImageButton
        android:id="@+id/btnModificarRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="15dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_bxs_up_arrow_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtRespuestaM"
        app:layout_constraintTop_toBottomOf="@+id/btnModificarClave" />

    <ImageButton
        android:id="@+id/btnModificarPregunta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="25dp"
        android:src="@drawable/ic_bxs_up_arrow_circle"
        app:layout_constraintStart_toEndOf="@+id/spnPreguntasM"
        app:layout_constraintTop_toBottomOf="@+id/btnModificarClave" />

    <Button
        android:id="@+id/btnVolverModUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="157dp"
        android:layout_marginTop="23dp"
        android:text="Exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnModificarUsuario" />

    <LinearLayout
        android:id="@+id/lyModificarUsuarioRol"
        android:layout_width="407dp"
        android:layout_height="73dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnModificarRespuesta">

        <TextView
            android:id="@+id/textView28"
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center"
            android:text="Role"
            android:textColor="#FFFFFF" />

        <Spinner
            android:id="@+id/spnRolModificar"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:background="@drawable/edt_texto_campos"
            android:ems="10"
            android:entries="@array/seccion"
            android:gravity="center" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>