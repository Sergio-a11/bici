<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarUsuario" >

    <EditText
        android:id="@+id/edtRespuestaM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Amante de la comida"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/lblRespuesta2"
        app:layout_constraintTop_toBottomOf="@+id/spnPreguntasM" />

    <TextView
        android:id="@+id/lblTituloM"
        android:layout_width="380dp"
        android:layout_height="79dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="112dp"
        android:singleLine="false"
        android:text="Modificar Informacion de usuario"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/lblNombre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="222dp"
        android:text="Nombre"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNombreM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Juanito Alcachofa"
        android:inputType="textPersonName"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/lblNombre2"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloM" />

    <TextView
        android:id="@+id/lblClave2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="60dp"
        android:text="Clave"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNombre2" />

    <EditText
        android:id="@+id/edtClaveM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:inputType="textPassword"
        android:minHeight="48dp"
        app:layout_constraintStart_toEndOf="@+id/lblClave2"
        app:layout_constraintTop_toBottomOf="@+id/edtNombreM" />

    <TextView
        android:id="@+id/lblPregunta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="58dp"
        android:text="Preguntas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblClave2" />

    <Spinner
        android:id="@+id/spnPreguntasM"
        android:layout_width="209dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="28dp"
        android:entries="@array/preguntas"
        app:layout_constraintStart_toEndOf="@+id/lblPregunta2"
        app:layout_constraintTop_toBottomOf="@+id/edtClaveM" />

    <Button
        android:id="@+id/btnModificarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="144dp"
        android:text="Modificar"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FF0000"
        android:textColorHint="#FF0000"
        android:textColorLink="#ED0000"
        app:iconTint="#DA0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtRespuestaM"
        app:rippleColor="#7E7E7E" />

    <TextView
        android:id="@+id/lblRespuesta2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="52dp"
        android:text="Respuesta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblPregunta2" />

    <ImageButton
        android:id="@+id/btnModificarNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="17dp"
        android:layout_marginEnd="15dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_bxs_up_arrow_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtNombreM"
        app:layout_constraintTop_toBottomOf="@+id/lblTituloM" />

    <ImageButton
        android:id="@+id/btnModificarClave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="16dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_bxs_up_arrow_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtClaveM"
        app:layout_constraintTop_toBottomOf="@+id/btnModificarNombre" />

    <ImageButton
        android:id="@+id/btnModificarRespuesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="102dp"
        android:layout_marginEnd="15dp"
        android:minHeight="48dp"
        android:src="@drawable/ic_bxs_up_arrow_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/edtRespuestaM"
        app:layout_constraintTop_toBottomOf="@+id/btnModificarClave" />

</androidx.constraintlayout.widget.ConstraintLayout>