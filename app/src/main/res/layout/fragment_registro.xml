<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registro">


    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="410dp"
        android:layout_height="498dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lblTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Register as New User"
                android:textColor="#FFFFFF"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblCodigo"
                    android:layout_width="134dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="Code"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/edtCodigo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_texto_campos"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="20192578140"
                    android:inputType="number"
                    android:minHeight="48dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView

                    android:id="@+id/lblNombre"
                    android:layout_width="134dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="Name"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/edtNombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_texto_campos"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Juanito Alcachofa"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblClave"
                    android:layout_width="134dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="Password"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/edtClave"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_texto_campos"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textPassword"
                    android:minHeight="48dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblCorreo"
                    android:layout_width="134dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="Email"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/edtCorreo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_texto_campos"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="estudiante@correo.com"
                    android:inputType="textEmailAddress"
                    android:minHeight="48dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblPregunta"
                    android:layout_width="134dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="Questions"
                    android:textColor="#FFFFFF" />

                <Spinner
                    android:id="@+id/spnPreguntas"
                    android:layout_width="261dp"
                    android:layout_height="54dp"
                    android:layout_marginEnd="80dp"

                    android:background="@drawable/edt_texto_campos"
                    android:dropDownSelector="@drawable/edt_texto_campos"
                    android:theme="@style/Theme.SdjComp.AppBarOverlay" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/lblRespuesta"
                    android:layout_width="134dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="Answer"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:id="@+id/edtRespuesta"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_texto_campos"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="Fan of food"
                    android:inputType="textPersonName"
                    android:minHeight="48dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyRol"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView23"
                    android:layout_width="134dp"
                    android:layout_height="31dp"
                    android:gravity="center"
                    android:text="Role"
                    android:textColor="#FFFFFF" />

                <Spinner
                    android:id="@+id/spnRol"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edt_texto_campos"
                    android:ems="10"
                    android:gravity="center"
                    android:entries="@array/seccion"
                    android:layout_weight="1" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnRegistrarUsuario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="61dp"
        android:background="@drawable/radius"
        android:text="Register"
        android:textColor="#FFFFFF"
        android:textColorHighlight="#FF0000"
        android:textColorHint="#FF0000"
        android:textColorLink="#ED0000"
        app:iconTint="#DA0000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4"
        app:rippleColor="#7E7E7E" />

    <Button
        android:id="@+id/btnVolverRegistro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="66dp"
        android:layout_marginTop="13dp"
        android:background="@drawable/radius"
        android:text="Exit"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4" />

</androidx.constraintlayout.widget.ConstraintLayout>