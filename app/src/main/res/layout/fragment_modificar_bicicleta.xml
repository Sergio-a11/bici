<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarBicicleta">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="471dp"
        tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                android:text="Edit Fields Required"
                android:textAlignment="center"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="134dp"
                    android:layout_height="31dp"
                    android:text="Owner Id"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF" />

                <EditText
                    android:background="@drawable/edt_texto_campos"
                    android:id="@+id/txtCedulaBici1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="20"
                    android:minHeight="48dp"
                    android:textAlignment="center"
                    android:text="Name" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:text="Date Registered" />

                <EditText
                    android:id="@+id/txtFechaRegistroBici1"
                    android:background="@drawable/edt_texto_campos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="date"
                    android:textAlignment="center"
                    android:maxLength="10"
                    android:minHeight="48dp"
                    android:text="Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="134dp"
                    android:textAlignment="center"
                    android:layout_height="wrap_content"
                    android:text="Place"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:id="@+id/txtLugarRegistroBici1"
                    android:background="@drawable/edt_texto_campos"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="45"
                    android:minHeight="48dp"
                    android:textAlignment="center"
                    android:text="Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="Brand"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"/>

                <Spinner
                    android:background="@drawable/edt_texto_campos"
                    android:id="@+id/spnMarcaBici1"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:theme="@style/Theme.SdjComp.AppBarOverlay"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView13"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="Seire #"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:background="@drawable/edt_texto_campos"
                    android:id="@+id/txtNumSerieBici1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="number"
                    android:maxLength="45"
                    android:minHeight="48dp"
                    android:textAlignment="center"
                    android:text="Name" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:text="Type"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"/>

                <Spinner
                    android:background="@drawable/edt_texto_campos"
                    android:id="@+id/spnTipoBici1"
                    android:layout_width="match_parent"
                    android:theme="@style/Theme.SdjComp.AppBarOverlay"
                    android:layout_height="48dp"
                    android:layout_weight="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView15"
                    android:layout_width="134dp"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text="Color"
                    android:textColor="#FFFFFF"/>

                <EditText
                    android:background="@drawable/edt_texto_campos"
                    android:id="@+id/txtColorBici1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:maxLength="45"
                    android:textAlignment="center"
                    android:minHeight="48dp"
                    android:text="Name" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="500dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnModificarBici1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:text="Edit" />

        <Button
            android:id="@+id/btnVolverModBici"
            android:layout_width="298dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="Exit" />

    </LinearLayout>

</FrameLayout>